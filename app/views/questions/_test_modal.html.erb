<% provide(:url, test_answer_question_path(@question)) %>

<div class="modal" id="test-modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button id="close" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Execute seus casos de teste</h4>
      </div>
      <div class="modal-body">
        <%= render 'shared/answer_form' %>
      </div>
      <div class="modal-footer">
        <div id="test-results"></div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.modal-body').height(450);
</script>
