<%= provide(:header, "Seus exercícios") %>
<%= provide(:description, "Preview") %>

<%= link_to "Criar novo exercício", new_exercise_path, class: "btn btn-primary pull-right" %>
<br></br>
<br></br>

<% @exercises.each do |exercise| %>
  <div class="box box-solid box-default">
    <div class="box-header">
      <h3 class="box-title"><%= exercise.title %></h></h3>
    </div><!-- /.box-header -->
    <div class="box-body">
      <%= markdown(truncate(exercise.description, length: 200, separator: ' ')) %>
    </div><!-- /.box-body -->
    <div class="box-footer">
      <b>Possui <a href="<%= exercise_questions_path(exercise) %>"><%= pluralize_questions(exercise.questions.count) %></a></b>
      <div class="pull-right">
        <%= link_to "Ver", exercise %> |
        <%= link_to "Editar", edit_exercise_path(exercise) %> |
        <%= link_to "Excluir", exercise, method: :delete,
                    data: { confirm: "Tem certeza que deseja excluir?" } %>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $( document ).ready(function() {
    $('.breadcrumb').append("<li><a href='<%= root_path %>'><i class='fa fa-dashboard'></i>Home</a></li>",
                            "<li><b>Exercícios</b></li>")
  });
</script>
