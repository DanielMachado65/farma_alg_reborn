<div class="modal" id="test-modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button id="close" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Execute seus casos de teste</h4>
      </div>
      <div class="modal-body">
        <b>Forneça uma solução</b>
        <textarea id="solution-test" cols="90", rows="10"></textarea>
        <button id="execute-test" class="btn btn-primary">Testar</button>
      </div>
      <div class="modal-footer">
        <div id="test-results"></div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#execute-test').click(function() {
    // Change to "running layout".
    var text = $(this).text();
    $(this).append(' <i class="fa fa-refresh fa-spin"></i>')
    $(this).attr('disabled', 'true');
    $('#test-results').empty();

    var source_code = $('#solution-test').val();
    $.ajax({
     type: 'POST',
     url: '<%= test_url %>',
     dataType: 'script',
     data: { source_code: source_code },
     success: function() {
       // Change to "run layout".
       $('#execute-test').attr('disabled', false);
       $('#execute-test').empty();
       $('#execute-test').text(text);
     }
   });
  });
</script>
