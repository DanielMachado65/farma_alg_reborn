<div class="modal" id="test-modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button id="close" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Execute seus casos de teste</h4>
      </div>
      <div class="modal-body">
        <b>Forneça uma solução</b>
        <div id="editor_div"></div>
        <button id="execute-test" class="btn btn-primary pull-right" style="margin-top: 5px">Testar</button>
      </div>
      <div class="modal-footer">
        <div id="test-results"></div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  <%= render 'shared/create_ace_editor.js' %>
  $('.modal-body').height(450);

  $('#execute-test').click(function() {
    $('#test-results').empty();

    var source_code = editor.getSession().getValue();
    if (source_code == "") {
      alert("Seu editor está vazio!");
      return;
    }

    // Change to "testing layout".
    var text = $(this).text();
    $(this).append(' <i class="fa fa-refresh fa-spin"></i>')
    $(this).attr('disabled', 'true');

    $.ajax({
     type: 'POST',
     url: '<%= test_url %>',
     dataType: 'script',
     data: { source_code: source_code },
     success: function() {
       // Change to "test layout".
       $('#execute-test').attr('disabled', false);
       $('#execute-test').empty();
       $('#execute-test').text(text);
     }
   });
  });
</script>
