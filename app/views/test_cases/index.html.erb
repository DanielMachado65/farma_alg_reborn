<% breadcrumb :test_cases, @question %>

<%= link_to "Criar novo caso de teste", new_question_test_case_path(@question),
                                  class: "btn btn-primary pull-right",
                                  style: "margin-left: 10px" %>
<br></br>
<br></br>

<% @test_cases.each do |test_case| %>
  <div class="box box-solid box-default">
    <div class="box-header">
      <div class="box-title">
        <%= truncate(test_case.description, length: 100, separator: ' ') %>
      </div>
    </div>
    <div class="box-body">
      <b style="display: block">Inputs:</b>
      <% test_case.inputs.each_with_index do |input, index| %>
        <div style="display: block"><b><%= "#{index + 1}ยบ" %></b> <%= j(input) %></div>
        <p></p>
      <% end %>
      <p></p>
      <b>Output esperado:</b>
      <div style="display: block"><%= test_case.output %></div>
    </div><!-- /.box-body -->
    <div class="box-footer">
      <div class="pull-right">
        <%= link_to "Ver", test_case %> |
        <%= link_to "Editar", edit_test_case_path(test_case) %> |
        <%= link_to "Excluir", test_case, method: :delete,
                    data: { confirm: "Tem certeza que deseja excluir?" } %>
      </div>
    </div>
  </div>
<% end %>

<%= render "shared/paginate", object: @teams %>
