<div class="row">
  <div class="col-md-offset-1 col-md-10">
    <div class="box box-primary">

      <div class="box-body">
        <%= form_for [@question, @test_case] do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <div class="form-group">
            <%= f.label "Título" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label "Descrição" %>
            <%= f.text_area :description, class: "form-control" %>
          </div>

          <%= f.label "Inputs" %>
          <a id="add-input" class="btn">
            <i class="fa fa-plus"></i> Novo
          </a>

          <div id="inputs-container">
            <% @test_case.inputs.each_with_index do |input, index| %>
              <div class="form-group">
                <%= text_area_tag "test_case[inputs][]", input, class: "form-control" %>
                <a class="btn pull-right remove-input">
                  <i class="fa fa-times"></i>
                </a>
              </div>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label "Output esperado" %>
            <%= f.text_area :output, class: "form-control" %>
          </div>

          <%= f.submit yield(:button_text), class: "btn btn-primary pull-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
