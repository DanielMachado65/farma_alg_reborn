<%= provide(:header, "Responder questÃ£o '#{@question.title}'") %>

<% provide(:url, url_for(:action => 'create', :controller => 'answers')) %>

<% breadcrumb :new_answer, @team, @question %>

<div class="col-md-6" style="border-right: 1px solid black">
  <%= render "shared/answer_form" %>
  <br></br>
  <div id="test-results">
    <% @results.each do |result| %>
      <% if result[:correct] %>
        <div class="alert alert-success text-left">
          <i class='icon fa fa-check'> <%= result[:test_case].title %></i>
          <a
            href="#output"
            data-toggle="collapse"
            data-target="#output-<%= result[:test_case].id %>"
            class="pull-right"
          >
            Output
          </a>
        </div>
      <% else %>
        <div class="alert alert-danger text-left">
          <i class='icon fa fa-close'> <%= result[:test_case].title %></i>
          <a
            href="#output"
            data-toggle="collapse"
            data-target="#output-<%= result[:test_case].id %>"
            class="pull-right"
          >
            Output
          </a>
        </div>
      <% end %>

      <div
        id="output-<%= result[:test_case].id %>"
        class="collapse"
        style="background: white; border-radius: 5px; margin-bottom: 20px; padding: 5px 5px 5px 5px"
      >
        <%= result[:output] %>
      </div>

    <% end %>
  </div>
</div>

<div class="col-md-6">
  <div class="box box-solid">
    <div class="box-header with-border">
      <h3 class="box-title"><b>Enunciado:</b></h3>
    </div>

    <div class="box-body">
      <%= markdown(@question.description) %>
    </div>
  </div>
</div>
