<div class="modal" id="answer-content-modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button id="close" type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Resposta</h3>
      </div>

      <div class="modal-body">
        <%= render "shared/answer_form" %>
      </div>

    </div>
  </div>
</div>

<script>
  $('input[name=commit]').hide();
  // 'editor' var comes from answer_form.
  editor.setOptions( { readOnly: true } );
  editor.setValue("<%= raw(escape_javascript answer.content) %>", 1);
</script>
