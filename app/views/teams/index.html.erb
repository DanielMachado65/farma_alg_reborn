<div class="btn-group">
  <%= link_to(
    "Todas turmas",
    teams_path,
    remote: true,
    id: "all-teams",
    class: "btn btn-default active"
  ) %>

  <%= link_to(
    "Minhas turmas",
    teams_path(my_teams: true),
    remote: true,
    id: "my-teams",
    class: "btn btn-default"
  ) %>
</div>

<% if can? :create, Team %>
  <%= link_to(
    "Criar nova turma",
    new_team_path(@team),
    class: "btn btn-primary pull-right"
  ) %>
<% end %>

<br></br>

<div id="teams">
  <%= render partial: 'teams', locals: { teams: @teams } %>
</div>

<%= render "shared/paginate", object: @teams %>
