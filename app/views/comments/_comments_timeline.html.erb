  $(document).on('click', '#cancel-edit', function(event) {
    event.preventDefault();
    $('#comments-form').html("<%= escape_javascript(render partial: 'comments/form', locals: { comment: @comment, answer: @answer, btn_text: 'Postar comentÃ¡rio' } ) %>");
  });
</script>
